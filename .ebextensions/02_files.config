  "/opt/elasticbeanstalk/hooks/appdeploy/post/app_01_migrate.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      if [ -f /tmp/migrate ]
      then
        rm /tmp/migrate
        sudo docker exec $(sudo docker ps -q) python3 /srv/project/app/manage.py migrate
      fi

